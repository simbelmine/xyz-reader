<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/accentColor</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/primaryColor</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/darkPrimaryColor</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/textColor</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accentColor</item>
    </style>
</resources>
